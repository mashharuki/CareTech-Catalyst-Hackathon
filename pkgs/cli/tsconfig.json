{
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "compilerOptions": {
    // "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "lib": ["ESNext"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "isolatedModules": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@contract/*": ["../../contract/src/*"],
      "contract": ["../../contract/dist/index.d.ts"],
      "contract/*": ["../../contract/dist/*"]
    }
  }
}
